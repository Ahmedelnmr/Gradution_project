@using Homy.Application.Dtos
@model IEnumerable<ProjectListDto>
@{
    ViewData["Title"] = "إدارة المشاريع";
    var stats = ViewBag.Stats as Homy.Application.Dtos.ProjectStatsDto;
    var currentFilter = ViewBag.CurrentFilter as string;
}

<!-- Page Header -->
<div class="page-header">
    <div class="header-content">
        <h1 class="page-title">
            <i class="fas fa-building text-primary"></i>
            إدارة المشاريع
        </h1>
        <nav class="breadcrumb-nav">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">لوحة التحكم</a></li>
                <li class="breadcrumb-item active">إدارة المشاريع</li>
            </ol>
        </nav>
    </div>
    <div class="header-actions">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            إضافة مشروع جديد
        </a>
    </div>
</div>

<!-- Stats Cards -->
@if (stats != null)
{
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-lg-6">
            <div class="stat-card stat-primary">
                <div class="stat-icon"><i class="fas fa-city"></i></div>
                <div class="stat-content">
                    <h3 class="stat-value">@stats.TotalProjects</h3>
                    <p class="stat-label">إجمالي المشاريع</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6">
            <div class="stat-card stat-success">
                <div class="stat-icon"><i class="fas fa-check-circle"></i></div>
                <div class="stat-content">
                    <h3 class="stat-value">@stats.ActiveProjects</h3>
                    <p class="stat-label">مشاريع نشطة</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6">
            <div class="stat-card stat-warning">
                <div class="stat-icon"><i class="fas fa-tools"></i></div>
                <div class="stat-content">
                    <h3 class="stat-value">@stats.UnderConstruction</h3>
                    <p class="stat-label">تحت الإنشاء</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6">
            <div class="stat-card stat-purple">
                <div class="stat-icon"><i class="fas fa-home"></i></div>
                <div class="stat-content">
                    <h3 class="stat-value">@stats.TotalUnits</h3>
                    <p class="stat-label">إجمالي الوحدات</p>
                </div>
            </div>
        </div>
    </div>
}

<!-- Filter & Search -->
<div class="row mb-4">
    <div class="col-lg-6">
        <form asp-action="Index" method="get" class="search-form">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control"
                       placeholder="بحث..." value="@ViewBag.SearchTerm">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> بحث
                </button>
            </div>
        </form>
    </div>
    <div class="col-lg-6">
        <form asp-action="Index" method="get" class="filter-form">
            <select name="cityId" class="form-select" onchange="this.form.submit()">
                <option value="">الكل</option>
                @if (ViewBag.Cities != null)
                {
                    foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city.Id" selected="@(ViewBag.CityId == city.Id)">
                            @city.Name
                        </option>
                    }
                }
            </select>
        </form>
    </div>
</div>

<!-- Filter Tabs -->
<div class="filter-tabs mb-4">
    <a asp-action="Index" class="filter-tab @(string.IsNullOrEmpty(currentFilter) ? "active" : "")">
        <span>الكل</span>
        <span class="tab-count">@Model.Count()</span>
    </a>
    <a asp-action="Index" asp-route-filter="active" class="filter-tab @(currentFilter == "active" ? "active" : "")">
        <span>النشطة فقط</span>
        <span class="tab-count">@Model.Count(p => p.IsActive)</span>
    </a>
    <a asp-action="Index" asp-route-filter="residential" class="filter-tab @(currentFilter == "residential" ? "active" : "")">
        <span><i class="fas fa-building"></i> كمبوندات سكنية</span>
        <span class="tab-count">@Model.Count(p => p.ComputedType == ProjectTypeEnum.ResidentialCompound)</span>
    </a>
    <a asp-action="Index" asp-route-filter="commercial" class="filter-tab @(currentFilter == "commercial" ? "active" : "")">
        <span><i class="fas fa-store"></i> مشاريع تجارية</span>
        <span class="tab-count">@Model.Count(p => p.ComputedType == ProjectTypeEnum.CommercialProject)</span>
    </a>
    <a asp-action="Index" asp-route-filter="construction" class="filter-tab @(currentFilter == "construction" ? "active" : "")">
        <span><i class="fas fa-hard-hat"></i> تحت الإنشاء</span>
        <span class="tab-count">@Model.Count(p => p.ComputedType == ProjectTypeEnum.UnderConstruction)</span>
    </a>
</div>

<!-- Projects Grid -->
<div class="row g-4">
    @if (Model != null && Model.Any())
    {
        foreach (var project in Model)
        {
            <div class="col-xl-4 col-lg-6">
                <div class="ad-card">
                    <div class="ad-image">
                        <img src="@(project.LogoUrl ?? "https://images.unsplash.com/photo-1545324418-cc1a3fa10c00?w=400&h=250&fit=crop")"
                             alt="@project.Name">

                        <!-- Status Badge -->
                        <span class="ad-status @(project.IsActive ? "bg-success" : "bg-warning")">
                            @(project.IsActive ? "نشط" : "غير نشط")
                        </span>

                        <!-- Type Badge -->
                        <span class="position-absolute top-0 start-0 badge m-2" style="background: @GetTypeBadgeColor(project.ComputedType)">
                            <i class="@GetTypeIcon(project.ComputedType)"></i> @project.TypeText
                        </span>

                        <!-- Price -->
                        @if (project.MinPrice.HasValue)
                        {
                            <div class="ad-price">من @project.MinPrice.Value.ToString("N0") ج.م</div>
                        }
                    </div>
                    <div class="ad-content">
                        <h4 class="ad-title">
                            @project.Name
                            @if (!string.IsNullOrEmpty(project.NameEn))
                            {
                                <div class="text-muted small mt-1" style="font-size: 0.9rem;">@project.NameEn</div>
                            }
                        </h4>
                        <p class="ad-location">
                            <i class="fas fa-map-marker-alt"></i>
                            @project.CityName @(project.DistrictName != null ? $"- {project.DistrictName}" : "")
                        </p>
                        <div class="ad-details">
                            <a asp-action="Units" asp-route-id="@project.Id" class="text-decoration-none text-muted transition-hover">
                                <i class="fas fa-home"></i> @project.PropertiesCount وحدات
                            </a>
                        </div>
                        <div class="ad-footer">
                            <span class="ad-owner">
                                <i class="fas fa-building"></i> @project.TypeText
                            </span>
                            <div class="ad-actions">
                                <a asp-action="Details" asp-route-id="@project.Id"
                                   class="btn-icon btn-view" title="عرض">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@project.Id"
                                   class="btn-icon btn-edit" title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@project.Id" method="post" class="d-inline" onsubmit="return confirm('هل أنت متأكد من حذف هذا المشروع؟');">
                                    <button type="submit" class="btn-icon btn-delete text-danger" title="حذف">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> لا توجد مشاريع متاحة.
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        @if (TempData["SuccessMessage"] != null)
        {
                <text>
                document.addEventListener('DOMContentLoaded', function() {
                    alert('@TempData["SuccessMessage"]');
                });
                </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
                <text>
                document.addEventListener('DOMContentLoaded', function() {
                    alert('@TempData["ErrorMessage"]');
                });
                </text>
        }
    </script>
}

@functions {
    string GetTypeBadgeColor(ProjectTypeEnum type)
    {
        return type switch
        {
            ProjectTypeEnum.ResidentialCompound => "#6366f1",
            ProjectTypeEnum.CommercialProject => "#10b981",
            ProjectTypeEnum.UnderConstruction => "#f59e0b",
            _ => "#6b7280"
        };
    }

    string GetTypeIcon(ProjectTypeEnum type)
    {
        return type switch
        {
            ProjectTypeEnum.ResidentialCompound => "fas fa-building",
            ProjectTypeEnum.CommercialProject => "fas fa-store",
            ProjectTypeEnum.UnderConstruction => "fas fa-hard-hat",
            _ => "fas fa-question"
        };
    }
}
