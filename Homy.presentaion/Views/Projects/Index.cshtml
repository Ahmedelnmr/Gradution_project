@model IEnumerable<Homy.Application.Dtos.ProjectListDto>
@{
    ViewData["Title"] = "المشاريع والكمبوندات - هومي";
    var stats = ViewBag.Stats as Homy.Application.Dtos.ProjectStatsDto;
}

<!-- Page Header -->
<div class="page-header">
    <div class="header-content">
        <h1 class="page-title">
            <i class="fas fa-building text-primary"></i>
            المشاريع والكمبوندات
        </h1>
        <nav class="breadcrumb-nav">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">الرئيسية</a></li>
                <li class="breadcrumb-item active">المشاريع والكمبوندات</li>
            </ol>
        </nav>
    </div>
    <div class="header-actions">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            إضافة مشروع جديد
        </a>
    </div>
</div>

<!-- Stats Cards -->
@if (stats != null)
{
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-lg-6">
            <div class="stat-card stat-primary">
                <div class="stat-icon"><i class="fas fa-city"></i></div>
                <div class="stat-content">
                    <h3 class="stat-value">@stats.TotalProjects</h3>
                    <p class="stat-label">إجمالي المشاريع</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6">
            <div class="stat-card stat-success">
                <div class="stat-icon"><i class="fas fa-check-circle"></i></div>
                <div class="stat-content">
                    <h3 class="stat-value">@stats.ActiveProjects</h3>
                    <p class="stat-label">مشاريع نشطة</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6">
            <div class="stat-card stat-warning">
                <div class="stat-icon"><i class="fas fa-tools"></i></div>
                <div class="stat-content">
                    <h3 class="stat-value">@stats.UnderConstruction</h3>
                    <p class="stat-label">تحت الإنشاء</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6">
            <div class="stat-card stat-purple">
                <div class="stat-icon"><i class="fas fa-home"></i></div>
                <div class="stat-content">
                    <h3 class="stat-value">@stats.TotalUnits</h3>
                    <p class="stat-label">إجمالي الوحدات</p>
                </div>
            </div>
        </div>
    </div>
}

<!-- Filter & Search -->
<div class="row mb-4">
    <div class="col-lg-6">
        <form asp-action="Index" method="get" class="search-form">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control"
                       placeholder="ابحث عن مشروع..." value="@ViewBag.SearchTerm">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> بحث
                </button>
            </div>
        </form>
    </div>
    <div class="col-lg-6">
        <form asp-action="Index" method="get" class="filter-form">
            <select name="cityId" class="form-select" onchange="this.form.submit()">
                <option value="">كل المدن</option>
                @if (ViewBag.Cities != null)
                {
                    foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city.Id" selected="@(ViewBag.CityId == city.Id)">
                            @city.Name
                        </option>
                    }
                }
            </select>
        </form>
    </div>
</div>

<!-- Filter Tabs -->
<div class="filter-tabs mb-4">
    <a asp-action="Index" class="filter-tab @(ViewBag.FilterType == null ? "active" : "")">
        الكل <span class="tab-count">@Model.Count()</span>
    </a>
    <a asp-action="ActiveProjects" class="filter-tab @(ViewBag.FilterType == "Active" ? "active" : "")">
        نشطة فقط <span class="tab-count">@Model.Count(p => p.IsActive)</span>
    </a>
</div>

<!-- Projects Grid -->
<div class="row g-4">
    @if (Model != null && Model.Any())
    {
        foreach (var project in Model)
        {
            <div class="col-xl-4 col-lg-6">
                <div class="ad-card">
                    <div class="ad-image">
                        <img src="@(project.LogoUrl ?? "https://images.unsplash.com/photo-1545324418-cc1a3fa10c00?w=400&h=250&fit=crop")"
                             alt="@project.Name">
                        <span class="ad-status @(project.IsActive ? "bg-success" : "bg-warning")">
                            @(project.IsActive ? "نشط" : "غير نشط")
                        </span>
                        @if (project.MinPrice.HasValue)
                        {
                            <div class="ad-price">من @project.MinPrice.Value.ToString("N0") جنيه</div>
                        }
                    </div>
                    <div class="ad-content">
                        <h4 class="ad-title">@project.Name</h4>
                        <p class="ad-location">
                            <i class="fas fa-map-marker-alt"></i>
                            @project.CityName @(project.DistrictName != null ? $"- {project.DistrictName}" : "")
                        </p>
                        <div class="ad-details">
                            <span><i class="fas fa-home"></i> @project.PropertiesCount وحدة</span>
                        </div>
                        <div class="ad-footer">
                            <span class="ad-owner">
                                <i class="fas fa-building"></i> مشروع عقاري
                            </span>
                            <div class="ad-actions">
                                <a asp-action="Details" asp-route-id="@project.Id"
                                   class="btn-icon btn-view" title="عرض">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@project.Id"
                                   class="btn-icon btn-edit" title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> لا توجد مشاريع متاحة حالياً
            </div>
        </div>
    }
</div>

<!-- Pagination (يمكن إضافتها لاحقاً) -->
<nav class="mt-4">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
        </li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#"><i class="fas fa-chevron-left"></i></a>
        </li>
    </ul>
</nav>

@section Scripts {
    <script>
        // Toast notifications للرسائل
        @if (TempData["SuccessMessage"] != null)
        {
                <text>
                document.addEventListener('DOMContentLoaded', function() {
                    showToast('@TempData["SuccessMessage"]', 'success');
                });
                </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
                <text>
                document.addEventListener('DOMContentLoaded', function() {
                    showToast('@TempData["ErrorMessage"]', 'danger');
                });
                </text>
        }
    </script>
}