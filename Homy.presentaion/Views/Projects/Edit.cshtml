@model Homy.Application.Dtos.UpdateProjectDto
@{
    ViewData["Title"] = $"تعديل المشروع: {Model.Name}";
}

<!-- Page Header -->
<div class="page-header">
    <div class="header-content">
        <h1 class="page-title">
            <i class="fas fa-edit text-primary"></i>
            تعديل المشروع: @Model.Name
        </h1>
        <nav class="breadcrumb-nav">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">لوحة التحكم</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">إدارة المشاريع</a></li>
                <li class="breadcrumb-item active">تعديل</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Form Card -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-edit"></i>
                    تحديث بيانات المشروع
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    <input type="hidden" asp-for="CurrentLogoUrl" />
                    <input type="hidden" asp-for="CurrentCoverUrl" />

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- اسم المشروع -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-building text-primary"></i> اسم المشروع *
                            </label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="NameEn" class="form-label">
                                <i class="fas fa-language text-primary"></i> Project Name (English)
                            </label>
                            <input asp-for="NameEn" class="form-control" />
                            <span asp-validation-for="NameEn" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- المدينة -->
                    <div class="mb-3">
                        <label asp-for="CityId" class="form-label">
                            <i class="fas fa-city text-primary"></i> المدينة *
                        </label>
                        <select asp-for="CityId" class="form-select" id="citySelect">
                            <option value="">اختر المدينة</option>
                            @if (ViewBag.Cities != null)
                            {
                                foreach (var city in ViewBag.Cities)
                                {
                                    <option value="@city.Id" selected="@(Model.CityId == city.Id)">
                                        @city.Name
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CityId" class="text-danger"></span>
                    </div>

                    <!-- الحي -->
                    <div class="mb-3">
                        <label asp-for="DistrictId" class="form-label">
                            <i class="fas fa-map-marked-alt text-primary"></i> الحي
                        </label>
                        <select asp-for="DistrictId" class="form-select" id="districtSelect">
                            <option value="">اختر الحي</option>
                            @if (ViewBag.Districts != null)
                            {
                                foreach (var district in ViewBag.Districts)
                                {
                                    <option value="@district.Id" data-city-id="@district.CityId"
                                            selected="@(Model.DistrictId == district.Id)">
                                        @district.Name
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="DistrictId" class="text-danger"></span>
                    </div>

                    <!-- وصف الموقع -->
                    <div class="mb-3">
                        <label asp-for="LocationDescription" class="form-label">
                            <i class="fas fa-map-marker-alt text-primary"></i> وصف الموقع
                        </label>
                        <textarea asp-for="LocationDescription" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="LocationDescription" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LocationDescriptionEn" class="form-label">
                            <i class="fas fa-map-marker-alt text-primary"></i> Location Description (English)
                        </label>
                        <textarea asp-for="LocationDescriptionEn" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="LocationDescriptionEn" class="text-danger"></span>
                    </div>

                    <!-- شعار المشروع -->
                    <div class="mb-3">
                        <label asp-for="LogoImage" class="form-label">
                            <i class="fas fa-image text-primary"></i> شعار المشروع
                        </label>
                        
                        @if (!string.IsNullOrEmpty(Model.CurrentLogoUrl))
                        {
                            <div class="mb-2">
                                <img src="@Model.CurrentLogoUrl" alt="Logo Preview"
                                     class="img-thumbnail" style="max-width: 200px; max-height: 150px; object-fit: contain;" />
                                <small class="d-block text-muted">الشعار الحالي</small>
                            </div>
                        }
                        
                        <input asp-for="LogoImage" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="LogoImage" class="text-danger"></span>
                        <small class="form-text text-muted">اختياري - حدد صورة جديدة لاستبدال الحالية (PNG, JPG)</small>
                    </div>

                    <!-- صورة الغلاف -->
                    <div class="mb-3">
                        <label asp-for="CoverImage" class="form-label">
                            <i class="fas fa-image text-primary"></i> صورة الغلاف
                        </label>
                        
                        @if (!string.IsNullOrEmpty(Model.CurrentCoverUrl))
                        {
                            <div class="mb-2">
                                <img src="@Model.CurrentCoverUrl" alt="Cover Preview"
                                     class="img-thumbnail" style="max-width: 300px; max-height: 200px; object-fit: cover;" />
                                <small class="d-block text-muted">الغلاف الحالي</small>
                            </div>
                        }
                        
                        <input asp-for="CoverImage" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="CoverImage" class="text-danger"></span>
                        <small class="form-text text-muted">اختياري - حدد صورة جديدة لاستبدال الحالية (PNG, JPG)</small>
                    </div>

                    <!-- التفعيل -->
                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label">
                            <i class="fas fa-check-circle text-success"></i> مشروع نشط
                        </label>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> حفظ التغييرات
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-times"></i> إلغاء
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Filter Districts based on selected City
        document.getElementById('citySelect').addEventListener('change', function() {
            const selectedCityId = this.value;
            const districtSelect = document.getElementById('districtSelect');
            const districtOptions = districtSelect.querySelectorAll('option[data-city-id]');

            // Show/Hide districts based on selected city
            districtOptions.forEach(option => {
                if (selectedCityId === '' || option.dataset.cityId === selectedCityId) {
                    option.style.display = '';
                } else {
                    option.style.display = 'none';
                }
            });
        });

        // Trigger on page load
        document.addEventListener('DOMContentLoaded', function() {
            const citySelect = document.getElementById('citySelect');
            citySelect.dispatchEvent(new Event('change'));
        });
    </script>
}
