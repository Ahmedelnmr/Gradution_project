@model Homy.Application.Dtos.CreateProjectDto
@{
    ViewData["Title"] = "إضافة مشروع جديد";
}

<!-- Page Header -->
<div class="page-header">
    <div class="header-content">
        <h1 class="page-title">
            <i class="fas fa-plus-circle text-primary"></i>
            إضافة مشروع جديد
        </h1>
        <nav class="breadcrumb-nav">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">لوحة التحكم</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">إدارة المشاريع</a></li>
                <li class="breadcrumb-item active">إضافة مشروع جديد</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Form Card -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-edit"></i>
                    بيانات المشروع
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- اسم المشروع -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-building text-primary"></i> اسم المشروع *
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="اسم المشروع" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- المدينة -->
                    <div class="mb-3">
                        <label asp-for="CityId" class="form-label">
                            <i class="fas fa-city text-primary"></i> المدينة *
                        </label>
                        <select asp-for="CityId" class="form-select" id="citySelect">
                            <option value="">اختر المدينة</option>
                            @if (ViewBag.Cities != null)
                            {
                                foreach (var city in ViewBag.Cities)
                                {
                                    <option value="@city.Id">@city.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CityId" class="text-danger"></span>
                    </div>

                    <!-- الحي -->
                    <div class="mb-3">
                        <label asp-for="DistrictId" class="form-label">
                            <i class="fas fa-map-marked-alt text-primary"></i> الحي
                        </label>
                        <select asp-for="DistrictId" class="form-select" id="districtSelect">
                            <option value="">اختر الحي</option>
                            @if (ViewBag.Districts != null)
                            {
                                foreach (var district in ViewBag.Districts)
                                {
                                    <option value="@district.Id" data-city-id="@district.CityId">
                                        @district.Name
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="DistrictId" class="text-danger"></span>
                    </div>

                    <!-- وصف الموقع -->
                    <div class="mb-3">
                        <label asp-for="LocationDescription" class="form-label">
                            <i class="fas fa-map-marker-alt text-primary"></i> وصف الموقع
                        </label>
                        <textarea asp-for="LocationDescription" class="form-control" rows="3"
                                  placeholder="وصف الموقع"></textarea>
                        <span asp-validation-for="LocationDescription" class="text-danger"></span>
                    </div>

                    <!-- شعار المشروع -->
                    <div class="mb-3">
                        <label asp-for="LogoImage" class="form-label">
                            <i class="fas fa-image text-primary"></i> شعار المشروع
                        </label>
                        <input asp-for="LogoImage" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="LogoImage" class="text-danger"></span>
                        <small class="form-text text-muted">
                            اختياري - صورة شعار المشروع (PNG, JPG)
                        </small>
                    </div>

                    <!-- صورة الغلاف -->
                    <div class="mb-3">
                        <label asp-for="CoverImage" class="form-label">
                            <i class="fas fa-image text-primary"></i> صورة الغلاف
                        </label>
                        <input asp-for="CoverImage" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="CoverImage" class="text-danger"></span>
                        <small class="form-text text-muted">
                            اختياري - صورة غلاف المشروع (PNG, JPG)
                        </small>
                    </div>

                    <!-- التفعيل -->
                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                        <label asp-for="IsActive" class="form-check-label">
                            <i class="fas fa-check-circle text-success"></i> مشروع نشط
                        </label>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> حفظ المشروع
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> إلغاء
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Filter Districts based on selected City
        document.getElementById('citySelect').addEventListener('change', function() {
            const selectedCityId = this.value;
            const districtSelect = document.getElementById('districtSelect');
            const districtOptions = districtSelect.querySelectorAll('option[data-city-id]');

            // Reset district
            districtSelect.value = '';

            // Show/Hide districts based on selected city
            districtOptions.forEach(option => {
                if (selectedCityId === '' || option.dataset.cityId === selectedCityId) {
                    option.style.display = '';
                } else {
                    option.style.display = 'none';
                }
            });
        });

        // Trigger on page load if city is pre-selected
        document.addEventListener('DOMContentLoaded', function() {
            const citySelect = document.getElementById('citySelect');
            if (citySelect.value) {
                citySelect.dispatchEvent(new Event('change'));
            }
        });
    </script>
}
