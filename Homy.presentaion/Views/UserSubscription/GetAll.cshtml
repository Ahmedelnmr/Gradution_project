@model IEnumerable<Homy.Application.Dtos.UserDtos.UserSubDTOs.UserSubReadDTO>

@{
    ViewData["Title"] = "إدارة الاشتراكات";
}

<h1>إدارة الاشتراكات</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">إنشاء</a>
    <a asp-action="Expired" class="btn btn-danger">الاشتراكات المنتهية</a>
    <a asp-action="ExpiringSoon" class="btn btn-warning">تنتهي قريباً</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>اسم الباقة</th>
            <th>تاريخ البدء</th>
            <th>تاريخ الانتهاء</th>
            <th>الحالة</th>
            <th>طريقة الدفع</th>
            <th>المبلغ المدفوع</th>
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@(item.PackageName ?? item.PackageId.ToString())</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">نشط</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">غير نشط</span>
                    }
                </td>
                <td>@item.PaymentMethod</td>
                <td>@item.AmountPaid</td>
                <td>
                    <a asp-action="Details" asp-route-userId="@item.UserId" class="btn btn-info btn-sm">تفاصيل</a>
                    <a asp-action="Update" asp-route-userId="@item.UserId" class="btn btn-warning btn-sm">تعديل</a>
                </td>
            </tr>
        }
    </tbody>
</table>
