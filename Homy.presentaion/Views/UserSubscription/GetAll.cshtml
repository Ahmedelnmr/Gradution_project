@model IEnumerable<Homy.Application.Dtos.UserDtos.UserSubDTOs.UserSubReadDTO>

@{
    ViewData["Title"] = "All User Subscriptions";
}

<h1>All User Subscriptions</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <a asp-action="Expired" class="btn btn-danger">Expired Subscriptions</a>
    <a asp-action="ExpiringSoon" class="btn btn-warning">Expiring Soon</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Package ID</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Active</th>
            <th>Payment Method</th>
            <th>Amount Paid</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.PackageId</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>
                <td>@item.PaymentMethod</td>
                <td>@item.AmountPaid</td>
                <td>
                    <a asp-action="Details" asp-route-userId="@item.UserId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Update" asp-route-userId="@item.UserId" class="btn btn-warning btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
