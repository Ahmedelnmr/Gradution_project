@model Homy.Application.Dtos.UserDtos.UserSubDTOs.UserSubCreateDTO

@{
    ViewData["Title"] = "إنشاء اشتراك";
}

<h2>إنشاء اشتراك</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label class="form-label">معرف المستخدم</label>
        <input asp-for="UserId" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">معرف الباقة</label>
        <input asp-for="PackageId" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">تاريخ البدء</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">تاريخ الانتهاء</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">طريقة الدفع</label>
        <input asp-for="PaymentMethod" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">المبلغ المدفوع</label>
        <input asp-for="AmountPaid" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">حفظ</button>
</form>
