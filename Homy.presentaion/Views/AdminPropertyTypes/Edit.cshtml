@using Homy.Application.Dtos.Admin
@model UpdatePropertyTypeDto

@{
    ViewData["Title"] = "تعديل إدارة أنواع العقارات";
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">لوحة التحكم</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">إدارة أنواع العقارات</a></li>
            <li class="breadcrumb-item active">تعديل @Model.Name</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">تعديل إدارة أنواع العقارات</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CurrentIconUrl" />
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">الاسم <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="مثال: شقة، فيلا، أرض..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IconImage" class="form-label">أيقونة النوع</label>
                            
                            @if (!string.IsNullOrEmpty(Model.CurrentIconUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.CurrentIconUrl" alt="Current Icon" class="img-thumbnail" style="max-width: 100px; max-height: 100px; object-fit: contain;" />
                                    <small class="d-block text-muted">الصورة الحالية</small>
                                </div>
                            }
                            
                            <input asp-for="IconImage" class="form-control" type="file" accept="image/*" />
                            <span asp-validation-for="IconImage" class="text-danger"></span>
                            <small class="form-text text-muted">اختياري - حدد صورة جديدة لاستبدال الحالية (PNG, JPG, SVG)</small>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> حفظ
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> إلغاء
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

