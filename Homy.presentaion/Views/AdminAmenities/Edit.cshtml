@model Homy.Domin.models.Amenity
@{
    ViewData["Title"] = "تعديل ميزة";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0"><i class="fas fa-edit"></i> تعديل ميزة</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">اسم الميزة (عربي)</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NameEn" class="form-label">اسم الميزة (English)</label>
                        <input asp-for="NameEn" class="form-control" />
                        <span asp-validation-for="NameEn" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">الأيقونة الحالية</label>
                        @if (!string.IsNullOrEmpty(Model.IconUrl))
                        {
                            <div class="mb-2">
                                <img src="@Model.IconUrl" style="max-height: 50px;" alt="Icon" />
                            </div>
                        }
                        else
                        {
                            <p class="text-muted"><small>لا توجد أيقونة</small></p>
                        }
                    </div>
                    
                    <div class="mb-3">
                        <label for="iconFile" class="form-label">تغيير الأيقونة (اختياري)</label>
                        <input type="file" name="iconFile" class="form-control" accept="image/*" />
                        <div class="form-text">اترك هذا الحقل فارغاً للاحتفاظ بالأيقونة الحالية</div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
                        <button type="submit" class="btn btn-primary px-4"><i class="fas fa-save"></i> حفظ التغييرات</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
