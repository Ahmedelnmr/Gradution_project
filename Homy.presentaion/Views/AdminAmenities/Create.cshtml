@{
    ViewData["Title"] = "إضافة ميزة جديدة";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0"><i class="fas fa-plus"></i> إضافة ميزة جديدة</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="name" class="form-label">اسم الميزة (عربي)</label>
                        <input type="text" name="name" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label for="nameEn" class="form-label">اسم الميزة (English)</label>
                        <input type="text" name="nameEn" class="form-control" />
                    </div>
                    
                    <div class="mb-3">
                        <label for="iconFile" class="form-label">الأيقونة (اختياري)</label>
                        <input type="file" name="iconFile" class="form-control" accept="image/*" />
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
                        <button type="submit" class="btn btn-primary px-4"><i class="fas fa-save"></i> حفظ</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
