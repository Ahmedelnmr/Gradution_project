@model IEnumerable<Homy.Domin.models.Amenity>
@{
    ViewData["Title"] = "إدارة المميزات والخدمات";
}

<div class="page-header">
    <div class="header-content">
        <h1 class="page-title">
            <i class="fas fa-swimming-pool text-primary"></i> إدارة المميزات والخدمات
        </h1>
        <nav class="breadcrumb-nav">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">لوحة التحكم</a></li>
                <li class="breadcrumb-item active">المميزات</li>
            </ol>
        </nav>
    </div>
    <div class="header-actions">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة ميزة جديدة
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>الأيقونة</th>
                        <th>الاسم</th>
                        <th>Name (En)</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.IconUrl))
                                    {
                                        <img src="@item.IconUrl" alt="@item.Name" style="width: 30px; height: 30px; object-fit: contain;" />
                                    }
                                    else
                                    {
                                        <i class="fas fa-check text-muted"></i>
                                    }
                                </td>
                                <td class="fw-bold">@item.Name</td>
                                <td>@item.NameEn</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> تعديل
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('هل أنت متأكد من الحذف؟')">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i> حذف
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">لا توجد مميزات مضافة</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
