@model Homy.Application.Dtos.PackageDto

@{
    ViewData["Title"] = "إضافة باقة جديدة";
}

<div class="page-content">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-plus-circle text-primary"></i>
                إضافة باقة جديدة
            </h1>
            <nav class="breadcrumb-nav">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">الرئيسية</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">إدارة الباقات</a></li>
                    <li class="breadcrumb-item active">إضافة باقة</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">اسم الباقة</label>
                            <input asp-for="Name" class="form-control" placeholder="مثال: الباقة الذهبية" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label fw-bold">السعر</label>
                                <div class="input-group">
                                    <input asp-for="Price" class="form-control" />
                                    <span class="input-group-text">جنيه</span>
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DurationDays" class="form-label fw-bold">المدة (بالأيام)</label>
                                <input asp-for="DurationDays" class="form-control" />
                                <span asp-validation-for="DurationDays" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaxProperties" class="form-label fw-bold">أقصى عدد للإعلانات</label>
                                <input asp-for="MaxProperties" class="form-control" />
                                <span asp-validation-for="MaxProperties" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaxFeatured" class="form-label fw-bold">أقصى عدد للإعلانات المميزة</label>
                                <input asp-for="MaxFeatured" class="form-control" />
                                <span asp-validation-for="MaxFeatured" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="CanBumpUp">
                                <label class="form-check-label fw-bold" asp-for="CanBumpUp">
                                    إتاحة رفع الإعلان (Bump Up)
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-light">إلغاء</a>
                            <button type="submit" class="btn btn-primary px-4">حفظ الباقة</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
