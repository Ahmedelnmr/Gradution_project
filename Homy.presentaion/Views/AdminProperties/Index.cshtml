@using Homy.Application.Dtos.Admin
@using Homy.Domin.models
@model Homy.Application.Dtos.Common.PaginatedResult<PropertyListDto>

@{
    ViewData["Title"] = "إدارة الإعلانات";
    var statusCounts = ViewBag.StatusCounts as Dictionary<PropertyStatus, int>;
    int GetCount(PropertyStatus status) => statusCounts != null && statusCounts.ContainsKey(status) ? statusCounts[status] : 0;
    int totalAds = statusCounts != null ? statusCounts.Values.Sum() : 0;
    
    PropertyStatus? currentStatus = Context.Request.Query["Status"].ToString() switch 
    {
        "PendingReview" => PropertyStatus.PendingReview,
        "Active" => PropertyStatus.Active,
        "Rejected" => PropertyStatus.Rejected,
        _ => null
    };
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-bullhorn"></i> إدارة الإعلانات</h2>
        <div>
            <span class="badge bg-primary fs-6 px-3 py-2">إجمالي: @totalAds</span>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Tabs -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex gap-2 flex-wrap" role="group">
                <a href="@Url.Action("Index")" 
                   class="btn @(currentStatus == null ? "btn-primary" : "btn-outline-primary") flex-fill position-relative"
                   style="min-width: 150px;">
                    <i class="fas fa-list"></i> الكل
                    <span class="badge bg-light text-dark ms-2">@totalAds</span>
                </a>
                <a href="@Url.Action("Index", new { Status = PropertyStatus.PendingReview })" 
                   class="btn @(currentStatus == PropertyStatus.PendingReview ? "btn-warning" : "btn-outline-warning") flex-fill position-relative"
                   style="min-width: 150px;">
                    <i class="fas fa-clock"></i> قيد المراجعة
                    <span class="badge bg-light text-dark ms-2">@GetCount(PropertyStatus.PendingReview)</span>
                </a>
                <a href="@Url.Action("Index", new { Status = PropertyStatus.Active })" 
                   class="btn @(currentStatus == PropertyStatus.Active ? "btn-success" : "btn-outline-success") flex-fill position-relative"
                   style="min-width: 150px;">
                    <i class="fas fa-check-circle"></i> نشط
                    <span class="badge bg-light text-dark ms-2">@GetCount(PropertyStatus.Active)</span>
                </a>
                <a href="@Url.Action("Index", new { Status = PropertyStatus.Rejected })" 
                   class="btn @(currentStatus == PropertyStatus.Rejected ? "btn-danger" : "btn-outline-danger") flex-fill position-relative"
                   style="min-width: 150px;">
                    <i class="fas fa-times-circle"></i> مرفوض
                    <span class="badge bg-light text-dark ms-2">@GetCount(PropertyStatus.Rejected)</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Properties Grid -->
    <div class="row g-4">
        @foreach (var item in Model.Items)
        {
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm property-card">
                    <div class="position-relative">
                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/placeholder.jpg" : item.ImageUrl)" 
                             class="card-img-top" 
                             alt="@item.Title" 
                             style="height: 220px; object-fit: cover;">
                        
                        @switch (item.Status)
                        {
                            case PropertyStatus.PendingReview:
                                <span class="position-absolute top-0 start-0 badge bg-warning m-2"><i class="fas fa-clock"></i> قيد المراجعة</span>
                                break;
                            case PropertyStatus.Active:
                                <span class="position-absolute top-0 start-0 badge bg-success m-2"><i class="fas fa-check"></i> نشط</span>
                                break;
                            case PropertyStatus.Rejected:
                                <span class="position-absolute top-0 start-0 badge bg-danger m-2"><i class="fas fa-times"></i> مرفوض</span>
                                break;
                        }

                        <div class="position-absolute bottom-0 end-0 bg-dark bg-opacity-75 text-white px-3 py-2 m-2 rounded">
                            @if(item.Purpose == PropertyPurpose.ForRent && item.RentPriceMonthly.HasValue)
                            {
                                <strong>@item.RentPriceMonthly.Value.ToString("N0")</strong> <small>جنيه/شهر</small>
                            }
                            else
                            {
                                <strong>@item.Price.ToString("N0")</strong> <small>جنيه</small>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title text-truncate" style="color: var(--text-primary);">@item.Title</h6>
                        <p class="card-text small mb-2" style="color: var(--text-secondary);">
                            <i class="fas fa-map-marker-alt text-danger"></i> @item.CityName
                        </p>
                        <div class="d-flex justify-content-between text-muted small mb-3" style="color: var(--text-secondary) !important;">
                            <span><i class="fas fa-bed"></i> <strong>@item.Rooms</strong></span>
                            <span><i class="fas fa-bath"></i> <strong>@item.Bathrooms</strong></span>
                            <span><i class="fas fa-vector-square"></i> <strong>@item.Area</strong> م²</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <small style="color: var(--text-muted);"><i class="fas fa-user"></i> @item.OwnerName</small>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-primary">
                                <i class="fas fa-eye"></i> عرض
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        @if (!Model.Items.Any())
        {
            <div class="col-12 text-center py-5">
                <p class="text-muted">لا توجد إعلانات</p>
            </div>
        }
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                    <a class="page-link" href="@Url.Action("Index", new { Status = currentStatus, Page = Model.Page - 1 })">السابق</a>
                </li>
                
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.Page == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { Status = currentStatus, Page = i })">@i</a>
                    </li>
                }
                
                <li class="page-item @(Model.HasNext ? "" : "disabled")">
                    <a class="page-link" href="@Url.Action("Index", new { Status = currentStatus, Page = Model.Page + 1 })">التالي</a>
                </li>
            </ul>
        </nav>
    }
</div>

