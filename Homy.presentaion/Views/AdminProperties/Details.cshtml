@using Homy.Application.Dtos.Admin
@using Homy.Domin.models
@model PropertyDetailsDto

@{
    ViewData["Title"] = "تفاصيل الإعلان";
}

<div class="container-fluid py-4">
    <!-- Header with Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col">
            <h2 style="color: var(--text-primary);">تفاصيل الإعلان</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">لوحة التحكم</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">إدارة الإعلانات</a></li>
                    <li class="breadcrumb-item active" style="color: var(--text-primary);">@Model.Title</li>
                </ol>
            </nav>
        </div>
        <div class="col-auto">
            <span class="badge @(Model.Status == PropertyStatus.Active ? "bg-success" : (Model.Status == PropertyStatus.PendingReview ? "bg-warning" : "bg-danger")) fs-6 px-3 py-2">
                @(Model.Status == PropertyStatus.PendingReview ? "قيد المراجعة" : Model.Status == PropertyStatus.Active ? "نشط" : "مرفوض")
            </span>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    @if (Model.Images.Any())
                    {
                        <div id="carouselImages" class="carousel slide mb-4" data-bs-ride="carousel">
                            <div class="carousel-inner rounded">
                                @for (int i = 0; i < Model.Images.Count; i++)
                                {
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <img src="@Model.Images[i]" class="d-block w-100" style="height: 400px; object-fit: cover;">
                                    </div>
                                }
                            </div>
                            @if(Model.Images.Count > 1) {
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselImages" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselImages" data-bs-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                </button>
                            }
                        </div>
                    }

                    <h3 class="mb-3" style="color: var(--text-primary);">@Model.Title</h3>
                    <div class="d-flex gap-3 mb-4" style="color: var(--text-secondary);">
                        <span><i class="fas fa-map-marker-alt text-danger"></i> @Model.CityName، @Model.DistrictName</span>
                        <span><i class="fas fa-home text-primary"></i> @Model.PropertyTypeName</span>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-3 text-center">
                            <div class="p-3 border rounded" style="background-color: var(--card-bg); border-color: var(--card-border) !important;">
                                <i class="fas fa-bed fs-4" style="color: var(--primary);"></i>
                                <div class="fw-bold mt-2" style="color: var(--text-primary); font-size: 1.5rem;">@Model.Rooms</div>
                                <small style="color: var(--text-secondary);">الغرف</small>
                            </div>
                        </div>
                        <div class="col-3 text-center">
                            <div class="p-3 border rounded" style="background-color: var(--card-bg); border-color: var(--card-border) !important;">
                                <i class="fas fa-bath fs-4" style="color: var(--primary);"></i>
                                <div class="fw-bold mt-2" style="color: var(--text-primary); font-size: 1.5rem;">@Model.Bathrooms</div>
                                <small style="color: var(--text-secondary);">الحمامات</small>
                            </div>
                        </div>
                        <div class="col-3 text-center">
                            <div class="p-3 border rounded" style="background-color: var(--card-bg); border-color: var(--card-border) !important;">
                                <i class="fas fa-vector-square fs-4" style="color: var(--primary);"></i>
                                <div class="fw-bold mt-2" style="color: var(--text-primary); font-size: 1.5rem;">@Model.Area</div>
                                <small style="color: var(--text-secondary);">م²</small>
                            </div>
                        </div>
                        <div class="col-3 text-center">
                            <div class="p-3 border rounded" style="background-color: var(--card-bg); border-color: var(--card-border) !important;">
                                <i class="fas fa-layer-group fs-4" style="color: var(--primary);"></i>
                                <div class="fw-bold mt-2" style="color: var(--text-primary); font-size: 1.5rem;">@Model.FloorNumber</div>
                                <small style="color: var(--text-secondary);">الدور</small>
                            </div>
                        </div>
                    </div>

                    <h5 style="color: var(--text-primary);">الوصف</h5>
                    <p style="color: var(--text-secondary);">@Model.Description</p>

                    <h5 class="mt-4" style="color: var(--text-primary);">المرافق</h5>
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var amenity in Model.Amenities)
                        {
                            <span class="badge border" style="background-color: var(--dark-light); color: var(--text-primary); border-color: var(--card-border) !important;">
                                <i class="fas fa-check" style="color: var(--success);"></i> @amenity
                            </span>
                        }
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">سجل المراجعات</h5>
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var review in Model.ReviewHistory)
                    {
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between mb-1">
                                <h6>@review.AdminName</h6>
                                <small class="text-muted">@review.ReviewedAt.ToShortDateString()</small>
                            </div>
                            <div class="mb-1">
                                <span class="badge @(review.Action == ReviewAction.Approved ? "bg-success" : review.Action == ReviewAction.Rejected ? "bg-danger" : "bg-warning")">
                                    @(review.Action == ReviewAction.Approved ? "مقبول" : review.Action == ReviewAction.Rejected ? "مرفوض" : "مطلوب تعديل")
                                </span>
                            </div>
                            <small>@review.Message</small>
                        </div>
                    }
                    @if (!Model.ReviewHistory.Any())
                    {
                        <div class="list-group-item text-center text-muted">لا يوجد سجل مراجعات</div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 style="color: var(--text-primary);">المالك</h5>
                    <div class="d-flex align-items-center mb-3">
                        <img src="@(string.IsNullOrEmpty(Model.OwnerImage) ? "https://ui-avatars.com/api/?name=" + Model.OwnerName : Model.OwnerImage)" class="rounded-circle me-3" width="50" height="50">
                        <div>
                            <div class="fw-bold" style="color: var(--text-primary);">@Model.OwnerName</div>
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <a href="tel:@Model.OwnerPhone" class="btn btn-outline-primary btn-sm"><i class="fas fa-phone"></i> @Model.OwnerPhone</a>
                        @if (!string.IsNullOrEmpty(Model.OwnerWhatsApp))
                        {
                            <a href="https://wa.me/@Model.OwnerWhatsApp" class="btn btn-outline-success btn-sm"><i class="fab fa-whatsapp"></i> واتساب</a>
                        }
                    </div>
                </div>
            </div>

            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0 text-white">قرار المراجعة</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Review" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="PropertyId" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">ملاحظات</label>
                            <textarea name="Message" class="form-control" rows="4" placeholder="اكتب رسالة للمعلن..."></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" name="Action" value="@ReviewAction.Approved" class="btn btn-success">
                                <i class="fas fa-check"></i> قبول ونشر
                            </button>
                            <button type="submit" name="Action" value="@ReviewAction.ChangesRequested" class="btn btn-warning">
                                <i class="fas fa-edit"></i> طلب تعديل
                            </button>
                            <button type="submit" name="Action" value="@ReviewAction.Rejected" class="btn btn-danger">
                                <i class="fas fa-times"></i> رفض نهائي
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

