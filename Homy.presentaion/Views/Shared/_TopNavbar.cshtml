@using Microsoft.AspNetCore.Identity
@using Homy.Domin.models
@inject UserManager<User> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var displayName = user?.FullName ?? "Admin";
    var profileImage = !string.IsNullOrEmpty(user?.ProfileImageUrl) ? user.ProfileImageUrl : "https://ui-avatars.com/api/?name=" + displayName + "&background=6366f1&color=fff&size=36";
}

<nav class="top-navbar">
    <div class="navbar-right">
        <!-- Mobile Menu Toggle -->
        <button class="menu-toggle d-lg-none" id="menuToggle">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Logo (visible on mobile) -->
        <a asp-controller="Home" asp-action="Index" class="navbar-brand d-lg-none">
            <i class="fas fa-home"></i>
            <span>هومي</span>
        </a>

        <!-- Search (desktop) -->
        <div class="search-box d-none d-lg-flex">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="بحث..." class="search-input">
            <span class="search-shortcut">⌘K</span>
        </div>
    </div>

    <div class="navbar-left">
        <!-- Theme Toggle -->
        <button class="nav-icon-btn" id="themeToggle" title="تغيير الوضع">
            <i class="fas fa-moon"></i>
        </button>

        <!-- User Dropdown -->
        <div class="nav-dropdown">
            <button class="user-dropdown-btn" id="userDropdownBtn">
                <img src="@profileImage"
                     alt="@displayName" class="user-avatar-sm" style="object-fit:cover;">
                <span class="user-name-nav d-none d-md-inline">@displayName</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="dropdown-menu user-menu" id="userDropdownMenu">
                <a asp-controller="Account" asp-action="Profile" class="dropdown-item">
                    <i class="fas fa-user"></i>
                    <span>الملف الشخصي</span>
                </a>
                <a href="#" class="dropdown-item">
                    <i class="fas fa-cog"></i>
                    <span>الإعدادات</span>
                </a>
                <div class="dropdown-divider"></div>
                <a asp-controller="Account" asp-action="Logout" class="dropdown-item text-danger">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>تسجيل الخروج</span>
                </a>
            </div>
        </div>
    </div>
</nav>

