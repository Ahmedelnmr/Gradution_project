@* Homy Admin Dashboard - Sidebar *@

<aside class="sidebar" id="sidebar">
    <!-- Sidebar Header -->
    <div class="sidebar-header">
        <a asp-controller="Home" asp-action="Index" class="sidebar-brand">
            <i class="fas fa-home"></i>
            <span>هومي</span>
        </a>
        <button class="sidebar-close d-lg-none" id="sidebarClose">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <!-- Sidebar Navigation -->
    <nav class="sidebar-nav">
        <ul class="nav-list">
            <!-- لوحة التحكم -->
            <li class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                <a asp-controller="Home" asp-action="Index" class="nav-link">
                    <i class="fas fa-th-large"></i>
                    <span>لوحة التحكم</span>
                </a>
            </li>

            <!-- إدارة المستخدمين -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")">
                <a asp-controller="Users" asp-action="Index" class="nav-link">
                    <i class="fas fa-users"></i>
                    <span>إدارة المستخدمين</span>
                    <span class="badge bg-danger">12</span>
                </a>
            </li>

            <!-- إدارة الإعلانات -->
            <!-- إدارة الإعلانات -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminProperties" ? "active" : "")">
                <a asp-controller="AdminProperties" asp-action="Index" class="nav-link">
                    <i class="fas fa-bullhorn"></i>
                    <span>إدارة الإعلانات</span>
                </a>
            </li>

            <!-- إدارة أنواع العقارات -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminPropertyTypes" ? "active" : "")">
                <a asp-controller="AdminPropertyTypes" asp-action="Index" class="nav-link">
                    <i class="fas fa-layer-group"></i>
                    <span>أنواع العقارات</span>
                </a>
            </li>

            <!-- إدارة الاشتراكات -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Subscriptions" ? "active" : "")">
                <a asp-controller="Subscriptions" asp-action="Index" class="nav-link">
                    <i class="fas fa-credit-card"></i>
                    <span>إدارة الاشتراكات</span>
                </a>
            </li>

            <!-- إدارة الباقات -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Packages" ? "active" : "")">
                <a asp-controller="Packages" asp-action="Index" class="nav-link">
                    <i class="fas fa-box"></i>
                    <span>إدارة الباقات</span>
                </a>
            </li>

            <!-- المشاريع والكمبوندات -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Projects" ? "active" : "")">
                <a asp-controller="Projects" asp-action="Index" class="nav-link">
                    <i class="fas fa-building"></i>
                    <span>المشاريع والكمبوندات</span>
                </a>
            </li>

            <!-- الشكاوى والدعم -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Support" ? "active" : "")">
                <a asp-controller="Support" asp-action="Index" class="nav-link">
                    <i class="fas fa-headset"></i>
                    <span>الشكاوى والدعم</span>
                </a>
            </li>

            <!-- الإحصائيات والتقارير -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")">
                <a asp-controller="Reports" asp-action="Index" class="nav-link">
                    <i class="fas fa-chart-bar"></i>
                    <span>الإحصائيات والتقارير</span>
                </a>
            </li>

            <!-- Divider -->
            <li class="nav-divider"></li>

            <!-- تسجيل الخروج -->
            <li class="nav-item">
                <a asp-controller="Account" asp-action="Logout" class="nav-link text-danger">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>تسجيل الخروج</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Sidebar Footer -->
    <div class="sidebar-footer">
        <div class="user-info">
            <img src="https://ui-avatars.com/api/?name=Admin&background=6366f1&color=fff&size=40" alt="Admin"
                class="user-avatar">
            <div class="user-details">
                <span class="user-name">أدمن هومي</span>
                <span class="user-role">مدير النظام</span>
            </div>
        </div>
    </div>
</aside>

<!-- Sidebar Overlay for Mobile -->
<div class="sidebar-overlay" id="sidebarOverlay"></div>
