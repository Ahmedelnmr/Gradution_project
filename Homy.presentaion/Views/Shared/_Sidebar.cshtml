@using Microsoft.AspNetCore.Identity
@using Homy.Domin.models
@inject UserManager<User> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var displayName = user?.FullName ?? "Admin";
    var profileImage = !string.IsNullOrEmpty(user?.ProfileImageUrl) ? user.ProfileImageUrl : "https://ui-avatars.com/api/?name=" + displayName + "&background=6366f1&color=fff&size=40";
}

<aside class="sidebar" id="sidebar">
    <!-- Sidebar Header -->
    <div class="sidebar-header">
        <a asp-controller="Home" asp-action="Index" class="sidebar-brand">
            <i class="fas fa-home"></i>
            <span>هومي</span>
        </a>
        <button class="sidebar-close d-lg-none" id="sidebarClose">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <!-- Sidebar Navigation -->
    <nav class="sidebar-nav">
        <ul class="nav-list">
            <!-- لوحة التحكم -->
            <li class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                <a asp-controller="Home" asp-action="Index" class="nav-link">
                    <i class="fas fa-th-large"></i>
                    <span>لوحة التحكم</span>
                </a>
            </li>

            <!-- إدارة المستخدمين -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")">
                <a asp-controller="Users" asp-action="Index" class="nav-link">
                    <i class="fas fa-users"></i>
                    <span>إدارة المستخدمين</span>
                    <span class="badge bg-danger">12</span>
                </a>
            </li>

            <!-- إدارة الإعلانات -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminProperties" ? "active" : "")">
                <a asp-controller="AdminProperties" asp-action="Index" class="nav-link">
                    <i class="fas fa-bullhorn"></i>
                    <span>إدارة الإعلانات</span>
                </a>
            </li>

            <!-- إدارة أنواع العقارات -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminPropertyTypes" ? "active" : "")">
                <a asp-controller="AdminPropertyTypes" asp-action="Index" class="nav-link">
                    <i class="fas fa-layer-group"></i>
                    <span>أنواع العقارات</span>
                </a>
            </li>

            <!-- إدارة الاشتراكات -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "UserSubscription" ? "active" : "")">
                <a asp-controller="UserSubscription" asp-action="GetAll" class="nav-link">
                    <i class="fas fa-credit-card"></i>
                    <span>إدارة الاشتراكات</span>
                </a>
            </li>

            <!-- إدارة الباقات -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Packges" ? "active" : "")">
                <a asp-controller="Packges" asp-action="Index" class="nav-link">
                    <i class="fas fa-box"></i>
                    <span>إدارة الباقات</span>
                </a>
            </li>

            <!-- المشاريع والكمبوندات -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Projects" ? "active" : "")">
                <a asp-controller="Projects" asp-action="Index" class="nav-link">
                    <i class="fas fa-building"></i>
                    <span>المشاريع والكمبوندات</span>
                </a>
            </li>
     
            <!-- الإحصائيات والتقارير -->
            <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")">
                <a asp-controller="Reports" asp-action="Index" class="nav-link">
                    <i class="fas fa-chart-bar"></i>
                    <span>الإحصائيات والتقارير</span>
                </a>
            </li>

            <!-- Divider -->
            <li class="nav-divider"></li>

            <!-- تسجيل الخروج -->
            <li class="nav-item">
                <a asp-controller="Account" asp-action="Logout" class="nav-link text-danger">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>تسجيل الخروج</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Sidebar Footer -->
    <div class="sidebar-footer">
        <a asp-controller="Account" asp-action="Profile" class="user-info text-decoration-none">
            <img src="@profileImage" alt="@displayName"
                class="user-avatar" style="object-fit:cover;">
            <div class="user-details">
                <span class="user-name">@displayName</span>
                <span class="user-role">مدير النظام</span>
            </div>
        </a>
    </div>
</aside>

<!-- Sidebar Overlay for Mobile -->
<div class="sidebar-overlay" id="sidebarOverlay"></div>

