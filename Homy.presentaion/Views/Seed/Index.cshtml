@model dynamic

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="mb-4">ðŸŒ± Data Seeder</h1>
            
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Current Statistics</h5>
                    <div class="row mt-3">
                        <div class="col-4 mb-3">
                            <h3>@Model.PropertyTypes</h3>
                            <small class="text-muted">Types</small>
                        </div>
                        <div class="col-4 mb-3">
                            <h3>@Model.Properties</h3>
                            <small class="text-muted">Properties</small>
                        </div>
                        <div class="col-4 mb-3">
                            <h3>@Model.Users</h3>
                            <small class="text-muted">Users</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-3 justify-content-center">
                <form asp-action="CreateData" method="post">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-database"></i> Generate Fake Data
                    </button>
                </form>

                <form asp-action="ClearData" method="post">
                    <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('Are you sure you want to delete all seed data?');">
                        <i class="fas fa-trash"></i> Clear Fake Data
                    </button>
                </form>
            </div>
            
            <div class="mt-4 alert alert-info">
                <strong>Note:</strong> Generated data will have prefix "Seed_" for easy identification.
            </div>
        </div>
    </div>
</div>
