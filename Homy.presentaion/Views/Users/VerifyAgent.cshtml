@using Homy.Application.Dtos.UserDtos
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model VerificationRequestDto
@{
    ViewData["Title"] = "توثيق الوسيط";
    var userInfo = (ViewBag.UserInfo as UserDto);
    var apiBaseUrl = Configuration["ApiSettings:BaseUrl"] ?? "http://localhost:5235";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-check"></i> توثيق الوسيط</h2>
                <a asp-action="UnverifiedAgents" class="btn btn-secondary">
                    <i class="fas fa-arrow-right"></i> عودة
                </a>
            </div>

            <!-- Alerts -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- User Info Card -->
            @if (userInfo != null)
            {
                <div class="card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="fas fa-user"></i> بيانات الوسيط</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- صورة الوسيط -->
                            <div class="col-md-4 text-center mb-3">
                                @if (!string.IsNullOrEmpty(userInfo.ProfileImageUrl))
                                {
                                    <img src="@userInfo.ProfileImageUrl" alt="@userInfo.FullName"
                                         class="img-fluid rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-warning text-dark rounded-circle mx-auto d-flex align-items-center justify-content-center shadow"
                                         style="width: 150px; height: 150px;">
                                        <i class="fas fa-user fa-4x"></i>
                                    </div>
                                }
                            </div>

                            <!-- تفاصيل الوسيط -->
                            <div class="col-md-8">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <th style="width: 40%;"><i class="fas fa-user"></i> الاسم الكامل:</th>
                                            <td><strong>@userInfo.FullName</strong></td>
                                        </tr>
                                        <tr>
                                            <th><i class="fas fa-phone"></i> رقم الهاتف:</th>
                                            <td>@userInfo.PhoneNumber</td>
                                        </tr>
                                        <tr>
                                            <th><i class="fab fa-whatsapp text-success"></i> واتساب:</th>
                                            <td>@(userInfo.WhatsAppNumber ?? "غير متوفر")</td>
                                        </tr>
                                        <tr>
                                            <th><i class="fas fa-envelope"></i> البريد:</th>
                                            <td>@(userInfo.Email ?? "غير متوفر")</td>
                                        </tr>
                                        <tr>
                                            <th><i class="fas fa-calendar"></i> تاريخ الانضمام:</th>
                                            <td>@userInfo.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                        </tr>
                                        <tr>
                                            <th><i class="fas fa-home"></i> عدد العقارات:</th>
                                            <td><span class="badge bg-info">@userInfo.PropertiesCount</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- إشعار هام -->
                        <div class="alert alert-info mt-3" role="alert">
                            <i class="fas fa-info-circle"></i>
                            <strong>ملاحظة:</strong>
                            توثيق الحساب يمنح الوسيط المزيد من الثقة والمميزات (مثل علامة التوثيق) ويحسن ظهوره في النتائج.
                            تأكد من صحة البيانات قبل اتخاذ أي إجراء.
                        </div>
                    </div>
                </div>
            }

            <!-- Verification Documents Card -->
            @if (userInfo != null && (!string.IsNullOrEmpty(userInfo.IdCardFrontUrl) || !string.IsNullOrEmpty(userInfo.IdCardBackUrl) || !string.IsNullOrEmpty(userInfo.SelfieWithIdUrl)))
            {
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-id-card"></i> المستندات المرفوعة</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @if (!string.IsNullOrEmpty(userInfo.IdCardFrontUrl))
                            {
                                <div class="col-md-4">
                                    <div class="text-center">
                                        <label class="form-label fw-bold"><i class="fas fa-id-card"></i> البطاقة (وجه)</label>
                                        <div class="border rounded p-2 bg-light" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#idFrontModal">
                                            <img src="@(apiBaseUrl + userInfo.IdCardFrontUrl)" alt="ID Front" class="img-fluid rounded shadow-sm" style="max-height: 200px; object-fit: contain;">
                                            <p class="text-muted mt-2 mb-0"><small><i class="fas fa-search-plus"></i> اضغط للتكبير</small></p>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(userInfo.IdCardBackUrl))
                            {
                                <div class="col-md-4">
                                    <div class="text-center">
                                        <label class="form-label fw-bold"><i class="fas fa-id-card"></i> البطاقة (ظهر)</label>
                                        <div class="border rounded p-2 bg-light" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#idBackModal">
                                            <img src="@(apiBaseUrl + userInfo.IdCardBackUrl)" alt="ID Back" class="img-fluid rounded shadow-sm" style="max-height: 200px; object-fit: contain;">
                                            <p class="text-muted mt-2 mb-0"><small><i class="fas fa-search-plus"></i> اضغط للتكبير</small></p>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(userInfo.SelfieWithIdUrl))
                            {
                                <div class="col-md-4">
                                    <div class="text-center">
                                        <label class="form-label fw-bold"><i class="fas fa-camera"></i> صورة السيلفي</label>
                                        <div class="border rounded p-2 bg-light" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#selfieModal">
                                            <img src="@(apiBaseUrl + userInfo.SelfieWithIdUrl)" alt="Selfie" class="img-fluid rounded shadow-sm" style="max-height: 200px; object-fit: contain;">
                                            <p class="text-muted mt-2 mb-0"><small><i class="fas fa-search-plus"></i> اضغط للتكبير</small></p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="alert alert-warning mt-3" role="alert">
                            <i class="fas fa-check-circle"></i>
                            <strong>تأكد من:</strong>
                            <ul class="mb-0">
                                <li>الصور واضحة ويمكن قراءة البيانات</li>
                                <li>صورة البطاقة تطابق الصورة الشخصية في السيلفي</li>
                                <li>البيانات المكتوبة تتطابق مع بيانات التسجيل</li>
                            </ul>
                        </div>
                    </div>
                </div>
            }

            <!-- Verification Form -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-clipboard-check"></i> قرار التوثيق</h5>
                </div>
                <div class="card-body">
                    <form asp-action="VerifyAgent" method="post">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.UserId)

                        <!-- اختيار قبول/رفض -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">القرار: <span class="text-danger">*</span></label>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check p-3 border rounded bg-light">
                                        <input class="form-check-input" type="radio" name="IsApproved"
                                               id="approve" value="true" checked onchange="toggleReasonField(false)">
                                        <label class="form-check-label" for="approve">
                                            <strong class="text-success">
                                                <i class="fas fa-check-circle"></i> قبول وتوثيق الوسيط
                                            </strong>
                                            <br>
                                            <small class="text-muted">نعم، البيانات صحيحة ويستحق التوثيق</small>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check p-3 border rounded bg-light">
                                        <input class="form-check-input" type="radio" name="IsApproved"
                                               id="reject" value="false" onchange="toggleReasonField(true)">
                                        <label class="form-check-label" for="reject">
                                            <strong class="text-danger">
                                                <i class="fas fa-times-circle"></i> رفض طلب التوثيق
                                            </strong>
                                            <br>
                                            <small class="text-muted">لا، هناك نقص أو مشكلة</small>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- سبب الرفض -->
                        <div class="mb-4" id="reasonField" style="display: none;">
                            <label for="Reason" class="form-label fw-bold">
                                سبب الرفض: <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Reason" class="form-control" rows="4"
                                      placeholder="مثال: صورة الهوية غير واضحة / البيانات غير مكتملة / رقم الهاتف لا يعمل"></textarea>
                            <small class="text-muted">
                                <i class="fas fa-lightbulb"></i>
                                كتابة سبب الرفض يساعد الوسيط على تصحيح وضعه وإعادة تقديم الطلب
                            </small>
                        </div>

                        <!-- الأزرار -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="UnverifiedAgents" class="btn btn-secondary">
                                <i class="fas fa-times"></i> إلغاء
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="fas fa-check"></i> تأكيد القرار
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modals for Full-Size Images -->
@if (userInfo != null)
{
    <!-- ID Front Modal -->
    @if (!string.IsNullOrEmpty(userInfo.IdCardFrontUrl))
    {
        <div class="modal fade" id="idFrontModal" tabindex="-1">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><i class="fas fa-id-card"></i> البطاقة (وجه)</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body text-center">
                        <img src="@(apiBaseUrl + userInfo.IdCardFrontUrl)" alt="ID Front" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- ID Back Modal -->
    @if (!string.IsNullOrEmpty(userInfo.IdCardBackUrl))
    {
        <div class="modal fade" id="idBackModal" tabindex="-1">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><i class="fas fa-id-card"></i> البطاقة (ظهر)</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body text-center">
                        <img src="@(apiBaseUrl + userInfo.IdCardBackUrl)" alt="ID Back" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Selfie Modal -->
    @if (!string.IsNullOrEmpty(userInfo.SelfieWithIdUrl))
    {
        <div class="modal fade" id="selfieModal" tabindex="-1">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><i class="fas fa-camera"></i> صورة السيلفي مع البطاقة</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body text-center">
                        <img src="@(apiBaseUrl + userInfo.SelfieWithIdUrl)" alt="Selfie" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    }
}

@section Scripts {
    <script>
        // إظهار/إخفاء سبب الرفض
        function toggleReasonField(show) {
            const reasonField = document.getElementById('reasonField');
            const reasonTextarea = document.getElementById('Reason');
            const submitBtn = document.getElementById('submitBtn');

            if (show) {
                reasonField.style.display = 'block';
                reasonTextarea.required = true;
                submitBtn.innerHTML = '<i class="fas fa-times"></i> تأكيد الرفض';
                submitBtn.classList.remove('btn-primary');
                submitBtn.classList.add('btn-danger');
            } else {
                reasonField.style.display = 'none';
                reasonTextarea.required = false;
                reasonTextarea.value = '';
                submitBtn.innerHTML = '<i class="fas fa-check"></i> تأكيد القبول';
                submitBtn.classList.remove('btn-danger');
                submitBtn.classList.add('btn-success');
            }
        }

        // تأكيد قبل الإرسال
        document.querySelector('form').addEventListener('submit', function(e) {
            const isApproved = document.querySelector('input[name="IsApproved"]:checked').value === 'true';
            const message = isApproved
                ? 'هل أنت متأكد من قبول وتوثيق هذا الوسيط؟'
                : 'هل أنت متأكد من رفض طلب التوثيق؟';

            if (!confirm(message)) {
                e.preventDefault();
            }
        });
    </script>
}
