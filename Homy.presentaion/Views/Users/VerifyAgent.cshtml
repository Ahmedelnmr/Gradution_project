@using Homy.Application.Dtos.UserDtos
@model VerificationRequestDto
@{
    ViewData["Title"] = "توثيق السمسار";
    var userInfo = (ViewBag.UserInfo as UserDto);
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-check"></i> توثيق السمسار</h2>
                <a asp-action="UnverifiedAgents" class="btn btn-secondary">
                    <i class="fas fa-arrow-right"></i> رجوع
                </a>
            </div>

            <!-- Alerts -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- User Info Card -->
            @if (userInfo != null)
            {
                <div class="card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="fas fa-user"></i> بيانات السمسار</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- صورة السمسار -->
                            <div class="col-md-4 text-center mb-3">
                                @if (!string.IsNullOrEmpty(userInfo.ProfileImageUrl))
                                {
                                    <img src="@userInfo.ProfileImageUrl" alt="@userInfo.FullName"
                                         class="img-fluid rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-warning text-dark rounded-circle mx-auto d-flex align-items-center justify-content-center shadow"
                                         style="width: 150px; height: 150px;">
                                        <i class="fas fa-user fa-4x"></i>
                                    </div>
                                }
                            </div>

                            <!-- بيانات السمسار -->
                            <div class="col-md-8">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <th style="width: 40%;"><i class="fas fa-user"></i> الاسم الكامل:</th>
                                            <td><strong>@userInfo.FullName</strong></td>
                                        </tr>
                                        <tr>
                                            <th><i class="fas fa-phone"></i> رقم الهاتف:</th>
                                            <td>@userInfo.PhoneNumber</td>
                                        </tr>
                                        <tr>
                                            <th><i class="fab fa-whatsapp text-success"></i> الواتساب:</th>
                                            <td>@(userInfo.WhatsAppNumber ?? "غير محدد")</td>
                                        </tr>
                                        <tr>
                                            <th><i class="fas fa-envelope"></i> الإيميل:</th>
                                            <td>@(userInfo.Email ?? "غير محدد")</td>
                                        </tr>
                                        <tr>
                                            <th><i class="fas fa-calendar"></i> تاريخ التسجيل:</th>
                                            <td>@userInfo.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                        </tr>
                                        <tr>
                                            <th><i class="fas fa-home"></i> عدد الإعلانات:</th>
                                            <td><span class="badge bg-info">@userInfo.PropertiesCount</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- ملاحظة مهمة -->
                        <div class="alert alert-info mt-3" role="alert">
                            <i class="fas fa-info-circle"></i>
                            <strong>ملاحظة:</strong>
                            يُرجى التحقق من بيانات السمسار (الهوية، الصور، الرخصة) قبل الموافقة على التوثيق.
                            في حالة الرفض، يجب كتابة سبب واضح ومحدد.
                        </div>
                    </div>
                </div>
            }

            <!-- Verification Form -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-clipboard-check"></i> قرار التوثيق</h5>
                </div>
                <div class="card-body">
                    <form asp-action="VerifyAgent" method="post">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.UserId)

                        <!-- خيارات القبول/الرفض -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">القرار: <span class="text-danger">*</span></label>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check p-3 border rounded bg-light">
                                        <input class="form-check-input" type="radio" name="IsApproved"
                                               id="approve" value="true" checked onchange="toggleReasonField(false)">
                                        <label class="form-check-label" for="approve">
                                            <strong class="text-success">
                                                <i class="fas fa-check-circle"></i> قبول وتوثيق السمسار
                                            </strong>
                                            <br>
                                            <small class="text-muted">سيتمكن من نشر الإعلانات بعد الاشتراك</small>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check p-3 border rounded bg-light">
                                        <input class="form-check-input" type="radio" name="IsApproved"
                                               id="reject" value="false" onchange="toggleReasonField(true)">
                                        <label class="form-check-label" for="reject">
                                            <strong class="text-danger">
                                                <i class="fas fa-times-circle"></i> رفض طلب التوثيق
                                            </strong>
                                            <br>
                                            <small class="text-muted">يجب كتابة سبب الرفض</small>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- سبب الرفض -->
                        <div class="mb-4" id="reasonField" style="display: none;">
                            <label for="Reason" class="form-label fw-bold">
                                سبب الرفض: <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Reason" class="form-control" rows="4"
                                      placeholder="مثال: صورة الهوية غير واضحة / بيانات غير مكتملة / شكوك في المصداقية"></textarea>
                            <small class="text-muted">
                                <i class="fas fa-lightbulb"></i>
                                سيتم إرسال هذا السبب للسمسار، يُرجى أن يكون محدداً وواضحاً
                            </small>
                        </div>

                        <!-- الأزرار -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="UnverifiedAgents" class="btn btn-secondary">
                                <i class="fas fa-times"></i> إلغاء
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="fas fa-check"></i> تأكيد القرار
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // إظهار/إخفاء حقل السبب
        function toggleReasonField(show) {
            const reasonField = document.getElementById('reasonField');
            const reasonTextarea = document.getElementById('Reason');
            const submitBtn = document.getElementById('submitBtn');

            if (show) {
                reasonField.style.display = 'block';
                reasonTextarea.required = true;
                submitBtn.innerHTML = '<i class="fas fa-times"></i> تأكيد الرفض';
                submitBtn.classList.remove('btn-primary');
                submitBtn.classList.add('btn-danger');
            } else {
                reasonField.style.display = 'none';
                reasonTextarea.required = false;
                reasonTextarea.value = '';
                submitBtn.innerHTML = '<i class="fas fa-check"></i> تأكيد الموافقة';
                submitBtn.classList.remove('btn-danger');
                submitBtn.classList.add('btn-success');
            }
        }

        // تأكيد قبل الإرسال
        document.querySelector('form').addEventListener('submit', function(e) {
            const isApproved = document.querySelector('input[name="IsApproved"]:checked').value === 'true';
            const message = isApproved
                ? 'هل أنت متأكد من قبول وتوثيق هذا السمسار؟'
                : 'هل أنت متأكد من رفض طلب التوثيق؟';

            if (!confirm(message)) {
                e.preventDefault();
            }
        });
    </script>
}


