@using Homy.Application.Dtos.UserDtos
@model IEnumerable<UserDto>
@{
    ViewData["Title"] = "إدارة المستخدمين";
}

<div class="container-fluid">
    <!-- Hidden CSRF token for toggle function -->
    @Html.AntiForgeryToken()
    
    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users-cog"></i> إدارة المستخدمين</h2>
        @if (ViewBag.UnverifiedCount > 0)
        {
            <a asp-action="UnverifiedAgents" class="btn btn-warning position-relative">
                <i class="fas fa-user-clock"></i> وسطاء بانتظار التوثيق
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    @ViewBag.UnverifiedCount
                    <span class="visually-hidden">unread messages</span>
                </span>
            </a>
        }
        <a asp-action="Statistics" class="btn btn-info">
            <i class="fas fa-chart-line"></i> إحصائيات المستخدمين
        </a>
    </div>

    <!-- Filters and Search -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-filter"></i> تصفية وبحث</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" name="SearchTerm" class="form-control"
                               placeholder="بحث بالاسم، البريد الإلكتروني أو الهاتف..."
                               value="@ViewBag.CurrentFilter?.SearchTerm">
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="Role" class="form-select">
                        <option value="" selected="@(ViewBag.CurrentFilter?.Role == null)">كل الصلاحيات</option>
                        <option value="3" selected="@(ViewBag.CurrentFilter?.Role == (Homy.Domin.models.UserRole)3)">مسؤول</option>
                        <option value="1" selected="@(ViewBag.CurrentFilter?.Role == (Homy.Domin.models.UserRole)1)">مالك</option>
                        <option value="2" selected="@(ViewBag.CurrentFilter?.Role == (Homy.Domin.models.UserRole)2)">وسيط</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="IsVerified" class="form-select">
                        <option value="" selected="@(ViewBag.CurrentFilter?.IsVerified == null)">كل الحالات</option>
                        <option value="true" selected="@(ViewBag.CurrentFilter?.IsVerified == true)">موثقين فقط</option>
                        <option value="false" selected="@(ViewBag.CurrentFilter?.IsVerified == false)">غير موثقين</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="btn-group w-100" role="group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> بحث</button>
                        <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-undo"></i> إعادة تعيين</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Users List -->
    <div class="card shadow">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0"><i class="fas fa-list"></i> قائمة المستخدمين</h5>
                </div>
                <div class="col text-end">
                    <span class="badge bg-primary">عدد النتائج: @Model.Count()</span>
                </div>
            </div>
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>المستخدم</th>
                        <th>الصلاحية</th>
                        <th>حالة التوثيق</th>
                        <th>الحالة</th>
                        <th>إحصائيات</th>
                        <th>تاريخ التسجيل</th>
                        <th class="text-center">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.ProfileImageUrl))
                                        {
                                            <img src="@item.ProfileImageUrl" class="rounded-circle me-2"
                                                 style="width: 40px; height: 40px; object-fit: cover;" alt="">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2"
                                                 style="width: 40px; height: 40px;">
                                                <i class="fas fa-user"></i>
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold">@item.FullName</div>
                                            <small class="text-muted">@item.PhoneNumber</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (item.Role == Homy.Domin.models.UserRole.Admin)
                                    {
                                        <span class="badge bg-danger">مسؤول</span>
                                    }
                                    else if (item.Role == Homy.Domin.models.UserRole.Agent)
                                    {
                                        <span class="badge bg-warning text-dark">وسيط</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">مالك</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsVerified)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check"></i> موثق</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted"><i class="fas fa-minus"></i></span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">معطل</span>
                                    }
                                </td>
                                <td>
                                    <small class="d-block">العقارات: @item.PropertiesCount</small>
                                    <small class="d-block text-muted">المحفوظة: @item.SavedPropertiesCount</small>
                                </td>
                                <td>
                                    <small>@item.CreatedAt.ToString("yyyy/MM/dd")</small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-white"
                                           title="تفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (item.Role == Homy.Domin.models.UserRole.Agent && !item.IsVerified)
                                        {
                                            <a asp-action="VerifyAgent" asp-route-id="@item.Id" class="btn btn-success"
                                               title="توثيق">
                                                <i class="fas fa-user-check"></i>
                                            </a>
                                        }

                                        @if (item.Role != Homy.Domin.models.UserRole.Admin)
                                        {
                                            @if (item.IsActive)
                                            {
                                                <button type="button" class="btn btn-warning text-dark"
                                                        onclick="toggleActive('@item.Id', false)"
                                                        title="تعطيل">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-primary"
                                                        onclick="toggleActive('@item.Id', true)"
                                                        title="تفعيل">
                                                    <i class="fas fa-check-circle"></i>
                                                </button>
                                            }

                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"
                                               title="حذف">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                                <p class="lead text-muted">لم يتم العثور على مستخدمين يطابقون بحثك.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        @if (ViewBag.TotalCount > 0)
        {
            var totalPages = (int)Math.Ceiling((double)ViewBag.TotalCount / (ViewBag.CurrentFilter?.PageSize ?? 10));
            var currentPage = ViewBag.CurrentFilter?.PageNumber ?? 1;
            
            <div class="card-footer">
                <nav aria-label="User pagination">
                    <ul class="pagination justify-content-center mb-0">
                        <!-- Previous -->
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                PageNumber = currentPage - 1,
                                PageSize = ViewBag.CurrentFilter?.PageSize,
                                SearchTerm = ViewBag.CurrentFilter?.SearchTerm,
                                Role = ViewBag.CurrentFilter?.Role,
                                IsVerified = ViewBag.CurrentFilter?.IsVerified
                            })">السابق</a>
                        </li>
                        
                        <!-- Page Numbers -->
                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { 
                                    PageNumber = i,
                                    PageSize = ViewBag.CurrentFilter?.PageSize,
                                    SearchTerm = ViewBag.CurrentFilter?.SearchTerm,
                                    Role = ViewBag.CurrentFilter?.Role,
                                    IsVerified = ViewBag.CurrentFilter?.IsVerified
                                })">@i</a>
                            </li>
                        }
                        
                        <!-- Next -->
                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                PageNumber = currentPage + 1,
                                PageSize = ViewBag.CurrentFilter?.PageSize,
                                SearchTerm = ViewBag.CurrentFilter?.SearchTerm,
                                Role = ViewBag.CurrentFilter?.Role,
                                IsVerified = ViewBag.CurrentFilter?.IsVerified
                            })">التالي</a>
                        </li>
                    </ul>
                </nav>
                <div class="text-center text-muted mt-2">
                    <small>الصفحة @currentPage من @totalPages - عرض @Model.Count() من @ViewBag.TotalCount مستخدم</small>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function toggleActive(userId, isActive) {
            var action = isActive ? 'تفعيل' : 'تعطيل';
            var message = 'هل أنت متأكد من ' + action + ' حساب هذا المستخدم؟';
            
            if (!confirm(message)) {
                return;
            }
            
            // Create form element
            var form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("ToggleActive")';
            
            // Add CSRF token
            var tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = '__RequestVerificationToken';
            tokenInput.value = document.querySelector('input[name="__RequestVerificationToken"]').value;
            form.appendChild(tokenInput);
            
            // Add userId
            var userIdInput = document.createElement('input');
            userIdInput.type = 'hidden';
            userIdInput.name = 'userId';
            userIdInput.value = userId;
            form.appendChild(userIdInput);
            
            // Add isActive
            var isActiveInput = document.createElement('input');
            isActiveInput.type = 'hidden';
            isActiveInput.name = 'isActive';
            isActiveInput.value = isActive;
            form.appendChild(isActiveInput);
            
            // Submit form
            document.body.appendChild(form);
            form.submit();
        }
    </script>
}

<style>
    /* Pagination Dark Mode Fixes */
    .pagination .page-link {
        background-color: var(--card-bg);
        border-color: var(--card-border);
        color: var(--text-secondary);
    }
    
    .pagination .page-link:hover {
        background-color: var(--dark-light);
        border-color: var(--primary);
        color: var(--text-primary);
    }
    
    .pagination .page-item.active .page-link {
        background-color: var(--primary);
        border-color: var(--primary);
        color: white;
    }
    
    .pagination .page-item.disabled .page-link {
        background-color: var(--dark);
        border-color: var(--card-border);
        color: var(--text-muted);
    }
    
    .card-footer {
        background-color: var(--card-bg);
        border-top: 1px solid var(--card-border);
        color: var(--text-secondary);
    }
</style>
