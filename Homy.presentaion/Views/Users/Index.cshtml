@using Homy.Application.Dtos.UserDtos
@model IEnumerable<UserDto>
@{
    ViewData["Title"] = "إدارة المستخدمين";
    var currentFilter = ViewBag.CurrentFilter as string;
    var currentRole = ViewBag.CurrentRole as string;
    var showOnlyUnverified = ViewBag.ShowOnlyUnverified as bool? ?? false;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users-cog"></i> إدارة المستخدمين</h2>
        @if (ViewBag.UnverifiedCount > 0)
        {
            <a asp-action="UnverifiedAgents" class="btn btn-warning position-relative">
                <i class="fas fa-user-clock"></i> وسطاء بانتظار التوثيق
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    @ViewBag.UnverifiedCount
                    <span class="visually-hidden">unread messages</span>
                </span>
            </a>
        }
        <a asp-action="Statistics" class="btn btn-info">
            <i class="fas fa-chart-line"></i> إحصائيات المستخدمين
        </a>
    </div>

    <!-- Filters and Search -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-filter"></i> تصفية وبحث</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" name="searchString" class="form-control"
                               placeholder="بحث بالاسم، البريد الإلكتروني أو الهاتف..."
                               value="@currentFilter">
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="userRole" class="form-select" onchange="this.form.submit()">
                        <!option value="" @(string.IsNullOrEmpty(currentRole) ? "selected" : "")>كل الصلاحيات</!option>
                        <!option value="Admin" @(currentRole == "Admin" ? "selected" : "")>مسؤول</!option>
                        <!option value="Owner" @(currentRole == "Owner" ? "selected" : "")>مالك</!option>
                        <!option value="Agent" @(currentRole == "Agent" ? "selected" : "")>وسيط</!option>
                    </select>
                </div>
                <div class="col-md-2">
                    <div class="form-check mt-2">
                        <input class="form-check-input" type="checkbox" name="showOnlyUnverified" value="true"
                               id="showOnlyUnverified" @(showOnlyUnverified ? "checked" : "") onchange="this.form.submit()">
                        <label class="form-check-label" for="showOnlyUnverified">
                            غير موثقين فقط
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="btn-group w-100" role="group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> بحث</button>
                        <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-undo"></i> إعادة تعيين</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Users List -->
    <div class="card shadow">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0"><i class="fas fa-list"></i> قائمة المستخدمين</h5>
                </div>
                <div class="col text-end">
                    <span class="badge bg-primary">عدد النتائج: @Model.Count()</span>
                </div>
            </div>
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>المستخدم</th>
                        <th>الصلاحية</th>
                        <th>حالة التوثيق</th>
                        <th>الحالة</th>
                        <th>إحصائيات</th>
                        <th>تاريخ التسجيل</th>
                        <th class="text-center">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.ProfileImageUrl))
                                        {
                                            <img src="@item.ProfileImageUrl" class="rounded-circle me-2"
                                                 style="width: 40px; height: 40px; object-fit: cover;" alt="">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2"
                                                 style="width: 40px; height: 40px;">
                                                <i class="fas fa-user"></i>
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold">@item.FullName</div>
                                            <small class="text-muted">@item.PhoneNumber</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (item.Role == Homy.Domin.models.UserRole.Admin)
                                    {
                                        <span class="badge bg-danger">مسؤول</span>
                                    }
                                    else if (item.Role == Homy.Domin.models.UserRole.Agent)
                                    {
                                        <span class="badge bg-warning text-dark">وسيط</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">مالك</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsVerified)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check"></i> موثق</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted"><i class="fas fa-minus"></i></span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">معطل</span>
                                    }
                                </td>
                                <td>
                                    <small class="d-block">العقارات: @item.PropertiesCount</small>
                                    <small class="d-block text-muted">المحفوظة: @item.SavedPropertiesCount</small>
                                </td>
                                <td>
                                    <small>@item.CreatedAt.ToString("yyyy/MM/dd")</small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-white"
                                           title="تفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (item.Role == Homy.Domin.models.UserRole.Agent && !item.IsVerified)
                                        {
                                            <a asp-action="VerifyAgent" asp-route-id="@item.Id" class="btn btn-success"
                                               title="توثيق">
                                                <i class="fas fa-user-check"></i>
                                            </a>
                                        }

                                        @if (item.Role != Homy.Domin.models.UserRole.Admin)
                                        {
                                            @if (item.IsActive)
                                            {
                                                <button type="button" class="btn btn-warning text-dark"
                                                        onclick="toggleActive('@item.Id', false)"
                                                        title="تعطيل">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-primary"
                                                        onclick="toggleActive('@item.Id', true)"
                                                        title="تفعيل">
                                                    <i class="fas fa-check-circle"></i>
                                                </button>
                                            }

                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"
                                               title="حذف">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                                <p class="lead text-muted">لم يتم العثور على مستخدمين يطابقون بحثك.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (ViewBag.TotalPages > 1)
        {
            <div class="card-footer clearfix">
                <nav>
                    <ul class="pagination pagination-sm m-0 float-end">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-searchString="@currentFilter" asp-route-userRole="@currentRole">«</a>
                        </li>
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-route-page="@i" asp-route-searchString="@currentFilter" asp-route-userRole="@currentRole">@i</a>
                            </li>
                        }
                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-searchString="@currentFilter" asp-route-userRole="@currentRole">»</a>
                        </li>
                    </ul>
                    <span class="align-middle text-muted small">
                        عرض @(Model.Count()) من @ViewBag.TotalUsers مستخدم
                    </span>
                </nav>
            </div>
        }
    </div>
</div>


@section Scripts {
    <script>
        function toggleActive(userId, isActive) {
            var action = isActive ? 'تفعيل' : 'تعطيل';
            var message = 'هل أنت متأكد من ' + action + ' حساب هذا المستخدم؟';
            if (confirm(message)) {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("ToggleActive", "Users")';
                
                var userIdInput = document.createElement('input');
                userIdInput.type = 'hidden';
                userIdInput.name = 'userId';
                userIdInput.value = userId;
                form.appendChild(userIdInput);
                
                var isActiveInput = document.createElement('input');
                isActiveInput.type = 'hidden';
                isActiveInput.name = 'isActive';
                isActiveInput.value = isActive;
                form.appendChild(isActiveInput);
                
                var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                if (tokenInput) {
                    var antiForgeryToken = document.createElement('input');
                    antiForgeryToken.type = 'hidden';
                    antiForgeryToken.name = '__RequestVerificationToken';
                    antiForgeryToken.value = tokenInput.value;
                    form.appendChild(antiForgeryToken);
                }
                
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}
@Html.AntiForgeryToken()
